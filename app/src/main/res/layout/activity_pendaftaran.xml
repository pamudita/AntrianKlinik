<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skripsi.dita.antrianklinik.Pendaftaran">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="481dp"
            android:layout_marginEnd="19dp">

            <TextView
                android:id="@+id/textView15"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="Data Pendaftaran Online" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="@+id/textView16"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/textView15"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/view"
                android:layout_marginStart="19dp"
                android:layout_marginTop="12dp"
                android:text="Nomor RM" />

            <TextView
                android:id="@+id/txtNomorRM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView16"
                android:layout_alignBottom="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:text="" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/view2"
                android:layout_marginTop="12dp"
                android:text="Nama Pasien" />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view3"
                android:layout_alignStart="@+id/txtNomorRM"
                android:text="" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/view3"
                android:layout_marginTop="12dp"
                android:text="Tgl. Lahir" />

            <TextView
                android:id="@+id/txtTglLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView29"
                android:layout_alignBottom="@+id/textView29"
                android:layout_alignStart="@+id/txtNama"
                android:text="" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView29"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/view4"
                android:layout_marginTop="12dp"
                android:text="Cara Bayar" />

            <Spinner
                android:id="@+id/spinnerCaraBayar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView20"
                android:background="@drawable/spinner_border"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/spinnerCaraBayar"
                android:layout_marginTop="12dp"
                android:text="No. Kartu" />

            <EditText
                android:id="@+id/txtNoKartu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/txtNoKartu"
                android:text="Tanggal Periksa" />

            <EditText
                android:id="@+id/txtTglPeriksa"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/textView22"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView23"
                android:layout_toEndOf="@+id/txtTglPeriksa"
                android:onClick="Calendar"
                app:srcCompat="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/txtTglPeriksa"
                android:text="Poliklinik" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/textView23"
                android:layout_below="@+id/textView23"
                android:background="@drawable/spinner_border"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_alignStart="@+id/spinner2"
                android:layout_below="@+id/spinner2"
                android:text="Dokter" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/textView24"
                android:layout_below="@+id/textView24"
                android:background="@drawable/spinner_border"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_alignStart="@+id/spinner3"
                android:layout_below="@+id/spinner3"
                android:text="Keluhan" />

            <EditText
                android:id="@+id/txtKeluhan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView25"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView25"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txtKeluhan"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Simpan" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
