<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skripsi.dita.antrianklinik.Tentang">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Informasi Singkat Tentang Aplikasi" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/rsst" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="17dp"
        android:gravity="center"
        android:text="Aplikasi Informasi Antrian \nPelayanan Pasien Rawat Jalan \nDi Poliklinik" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="27dp"
        android:text="Aplikasi ini dibuat untuk memenuhi tugas akhir \nSkripsi untuk jenjang Strata 1 Teknik Informatika. \nSTMIK AKAKOM YOGYAKARTA \n2018"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="37dp"
        android:text="Pamudita Saputri - 165410152" />
</RelativeLayout>
