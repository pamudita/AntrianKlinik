<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skripsi.dita.antrianklinik.UbahPassword">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:text="Password Lama" />

    <EditText
        android:id="@+id/editTextPasswornLama"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/textView31"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextPasswornLama"
        android:layout_below="@+id/editTextPasswornLama"
        android:text="Password Baru" />

    <EditText
        android:id="@+id/editTextPassswordBaru"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView36"
        android:layout_below="@+id/textView36"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextPassswordBaru"
        android:layout_below="@+id/editTextPassswordBaru"
        android:text="Konfirmasi Password Baru" />

    <EditText
        android:id="@+id/editTextPasswordKonfirmasiBaru"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView37"
        android:layout_below="@+id/textView37"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextPasswordKonfirmasiBaru"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:text="Simpan" />
</RelativeLayout>
